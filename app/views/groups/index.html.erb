<p style="color: green"><%= notice %></p>
<%= link_to "Home", user_path(@user.id), class: "btn btn-primary my-3" %>
<h1 class="text-center text-primary">Categories</h1>
 
<div id="groups">
  <% @groups.each do |group| %>
    <div class='card'>
    <%= link_to expenses_path do %>
      <%= render group %>
   
    <%end%>
    <p>
      <%= link_to "Show this Category", group %>
    </p> </div>
  <% end %>
  <div class="text-center">
    <%= link_to "Add a new category", new_group_path, class: "btn btn-primary w-100" %>
  </div>
  <div class="text-center">
    <%= button_to "sign-out", destroy_user_session_path, method: :delete, class: "btn btn-danger w-100 my-3"  %>
  </div>

</div>
